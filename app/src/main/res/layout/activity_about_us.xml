<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:background="@drawable/background_image">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#C6C29F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:id="@+id/tvAS"
    android:layout_width="wrap_content"
    android:layout_height="0pt"
    android:text="@string/tvAboutUS"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="15pt" />
    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="Nguyễn Anh Tú"
        app:layout_constraintTop_toBottomOf="@+id/tvAS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12pt"
        android:layout_marginTop="10pt"/>

    <TextView
        android:id="@+id/tvLop"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="D20_TH01"
        app:layout_constraintTop_toBottomOf="@+id/tvTen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12pt"/>
    <TextView
        android:id="@+id/tvMSSV"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="DH52001991"
        app:layout_constraintTop_toBottomOf="@+id/tvLop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12pt"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="dh52001991@student.stu.edu.vn"
        app:layout_constraintTop_toBottomOf="@+id/tvMSSV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12pt"/>
    <Button
        android:id="@+id/btnPhone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_phone"
        />
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        app:layout_constraintTop_toBottomOf="@+id/btnPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>